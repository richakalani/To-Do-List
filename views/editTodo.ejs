<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="/css/style.css" rel="stylesheet" type="text/css">
  <title>To Do List</title>
</head>
<body>
<h2 class="title">To Do list</h2>
<form method="post" action = '/' class="form-body">
  <input type="text" name="content" style="width: 60%;">
  <button class="done-btn">Add</button>
</form>
<br>
<ul>
  <% todoTasks.forEach(details => {%>
    <% if (details.id == idTask) { %>
      
      
      <form class="form-body" action='/edit/<%=details.id%>'method="POST">
        <input type = 'text' value='<%=details.content%>' name='content'>
        <br><br>
        <button type ='submit'>Confirm</button>
        <a href="/" class="cancel">Cancel</a>
        
      </form>

   <% } %>
  
  <%})%>
</ul>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>